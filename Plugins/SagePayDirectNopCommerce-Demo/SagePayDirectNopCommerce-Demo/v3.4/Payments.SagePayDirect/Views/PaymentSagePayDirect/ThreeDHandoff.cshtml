@using Nop.Web.Framework;
@model Ninvoice.NopPlugin.Payments.SagePayDirect.ViewModel.ThreeDSecureSendOffViewModel
@using Nop.Web.Framework;
<html>
<body onload="document.f1.submit();">
    
    @T("Ninvoice.Plugins.Payment.SagePayDirect.ThreeDSendOffPage")

    <form name="f1" action="@Model.BankUrl" method="POST">
        <input type="hidden" name="PaReq" value="@Model.PAReq" />
        <input type="hidden" name="TermUrl" value="@Model.ReturnUrl" />
        <input type="hidden" name="MD" value="@Model.MD" />
        <noscript>
            <center><p>Please click button below to Authenticate your card</p><input type="submit" value="Go" /></center>
        </noscript>
        <input type="submit" value="Go" />
    </form>

</body>
</html>