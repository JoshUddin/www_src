<script type="text/javascript">
	$(window).load(function(){
		//equal height blocks
		$('.social-block').parent().each(function(){
			var $this = $(this);
			var tallest = 0;
			var $socialBlocks = $this.find('.social-block');
			$socialBlocks.each(function(){
				var $that = $(this);
				var thatHeight = $that.height();
				console.log(thatHeight)
				if(thatHeight > tallest) tallest = thatHeight;
			});
			$socialBlocks.height(tallest);
		});
	});
</script>